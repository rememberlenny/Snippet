<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="large-4 columns">
      <label>First Name</label>
      <%= f.text_field :firstname %>
    </div>
    <div class="large-4 columns">
      <label>Last Name</label>
      <%= f.text_field :lastname %>
    </div>
    <div class="large-4 columns">
      <label>Phone Number</label>
      <%= f.text_field :phoneNumber %>
    </div>
  </div>
  <div class="field row">
    <div class="large-4 column">
      <p>Subscription Group</p>
    </div>
    <div class="large-8 columns">
      <label for="checkbox2"><%= f.check_box :groupRecreation %><span class="custom checkbox checked"></span> Recreational Programs</label>
      <label for="checkbox1"><%= f.check_box :groupRecipe %><span class="custom checkbox"></span> Healthy Recipes</label>
      <label for="checkbox3"><%= f.check_box :groupCoupon %><span class="custom checkbox checked"></span> Seasonal Coupons</label>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <label>Special Notes</label>
        <%= f.text_field :userNote %>
      <br>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
